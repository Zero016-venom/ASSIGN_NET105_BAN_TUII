@model ASM_NET105_BanTui.Core.Domain.Models.SanPham

@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="ID_SanPham" />

    <div class="form-group">
        <label asp-for="TenSanPham" class="control-label"></label>
        <input asp-for="TenSanPham" class="form-control" />
        <span asp-validation-for="TenSanPham" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuongTon" class="control-label"></label>
        <input asp-for="SoLuongTon" class="form-control" />
        <span asp-validation-for="SoLuongTon" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaNiemYet" class="control-label"></label>
        <input asp-for="GiaNiemYet" class="form-control" />
        <span asp-validation-for="GiaNiemYet" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ID_LoaiSP" class="control-label"></label>
        <select asp-for="ID_LoaiSP" class="form-control" asp-items="ViewBag.LoaiSP"></select>
        <span asp-validation-for="ID_LoaiSP" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ID_Hang" class="control-label"></label>
        <select asp-for="ID_Hang" class="form-control" asp-items="ViewBag.Hang"></select>
        <span asp-validation-for="ID_Hang" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ID_MauSac" class="control-label"></label>
        <select asp-for="ID_MauSac" class="form-control" asp-items="ViewBag.MauSac"></select>
        <span asp-validation-for="ID_MauSac" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ID_ChatLieu" class="control-label"></label>
        <select asp-for="ID_ChatLieu" class="form-control" asp-items="ViewBag.ChatLieu"></select>
        <span asp-validation-for="ID_ChatLieu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Img" class="control-label"></label>
        <input type="file" asp-for="Img" class="form-control" />
        <span asp-validation-for="Img" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <input asp-for="TrangThai" class="form-control" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
