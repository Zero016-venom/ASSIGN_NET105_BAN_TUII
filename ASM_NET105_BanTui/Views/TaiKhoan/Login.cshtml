@model LoginDTO
@{
    ViewBag.Title = "Đăng nhập";
}



<div class="container">
    <h2>Đăng nhập</h2>
    Bạn chưa có tài khoản ? <a asp-action="Register" asp-controller="TaiKhoan" class="btn-link">Đăng ký</a>

    <form asp-controller="TaiKhoan" class="container d-flex justify-content-center" asp-action="Login" method="post">

        <div class="">

            @*Email*@
            <div class="form-group w-100 d-flex justify-content-lg-between mb-4" style="width: 700px">
                <div class="">
                    <label asp-for="Email" class="form-label pt">Email</label>
                </div>
                <div class="flex-1 ms-3" style="width: 500px">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            @*Password*@
            <div class="form-group w-100 d-flex justify-content-lg-between mb-4" style="width: 700px">
                <div class="">
                    <label asp-for="Password" class="form-label pt">Mật khẩu</label>
                </div>
                <div class="flex-1 ms-3" style="width: 500px">
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            @*Login*@
            <div class="flex d-flex ms-3" style="width: 700px">
                <div class="w-25">
                </div>
                <div class="flex-1">
                    <button class="btn btn-success" type="submit">Đăng nhập</button>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    @if (ViewBag.Errors != null)
                    {
                        <div class="text-red ml">
                            <ul>
                                @foreach (string error in ViewBag.Errors)
                                {
                                    <li class="ml">@error</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}