@model IEnumerable<ASM_NET105_BanTui.Core.Domain.Models.ChatLieu>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách chất liệu</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tên chất liệu")
            </th>
            <th>
                @Html.DisplayName("Mô tả")
            </th>
            <th>
                @Html.DisplayName("Trạng thái")
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenChatLieu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID_ChatLieu }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.ID_ChatLieu }, new { @class = "btn btn-info" })
                    @* @Html.ActionLink("Delete", "Delete", new { id = item.ID_ChatLieu }, new { @class = "btn btn-danger" }) *@
            </td>
        </tr>
}
    </tbody>
</table>
