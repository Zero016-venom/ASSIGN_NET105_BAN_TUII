@model ASM_NET105_BanTui.Core.Domain.Models.MauSac

@{
    ViewData["Title"] = "Details";
}

<h3>Chi tiết màu</h3>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Tên màu")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenMauSac)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Mô tả")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Trạng thái")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID_MauSac" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index">Quay lại danh sách màu</a>
</div>
